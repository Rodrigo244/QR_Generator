<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

    </com.google.android.material.appbar.AppBarLayout>


    <EditText
        android:id="@+id/textDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:inputType="number"
        android:maxLength="15"/>


    <Button
        android:id="@+id/btnGenera"
        android:layout_width="134dp"
        android:layout_height="58dp"
        android:layout_below="@id/textDatos"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="34dp"
        android:gravity="center_vertical"
        android:text="Genera QR"
        android:textSize="16dp" />


    <Button
        android:id="@+id/btnGeneraCode"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_below="@id/textDatos"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="34dp"
        android:gravity="center_vertical"
        android:text="Genera Barras"
        android:textSize="14dp" />



    <ImageView
        android:id="@+id/qrCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGenera"
        android:layout_marginTop="30dp" />



    <ImageView
        android:id="@+id/qrCodeBarras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qrCode"
        android:layout_marginTop="50dp" />

</RelativeLayout>